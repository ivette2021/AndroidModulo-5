<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/black"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etEntero"
        android:layout_width="330dp"
        android:layout_height="56dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:background="@color/vclaro"
        android:hint="@string/hint1"
        android:inputType="text"
        android:text="@string/hint1"

        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="330dp"
        android:layout_height="56dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:text="Valor entero almacenado : %1$d"
        android:textSize="16sp"
        android:textColor="@color/blanco"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etEntero" />

    <EditText
        android:id="@+id/etTexto"
        android:layout_width="330dp"
        android:layout_height="56dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:background="@color/vclaro"
        android:hint="@string/hint2"
        android:inputType="text"
        android:text="@string/hint2"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv1" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="330dp"
        android:layout_height="56dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:text="Valor entero almacenado : %1$d"
        android:textSize="16sp"
        android:textColor="@color/blanco"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etTexto" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="330dp"
        android:layout_height="56dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:text="@string/switchText"
        android:textSize="16sp"
        android:textColor="@color/blanco"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv2" />

    <EditText
        android:id="@+id/etDecimal"
        android:layout_width="330dp"
        android:layout_height="56dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="@string/hint3"
        android:inputType="text"
        android:text="@string/hint3"
        android:textSize="16sp"
        android:background="@color/vclaro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch1" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="330dp"
        android:layout_height="56dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:text="@string/save3"
        android:textSize="16sp"
        android:textColor="@color/blanco"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDecimal" />

    <Button
        android:id="@+id/btnBorrar"
        android:layout_width="138dp"
        android:layout_height="55dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:text="@string/borrar"
        android:backgroundTint="@color/voscuro"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv3" />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="138dp"
        android:layout_height="55dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="28dp"
        android:text="@string/guardar"
        android:textSize="16sp"
        android:backgroundTint="@color/voscuro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btnBorrar"
        app:layout_constraintTop_toBottomOf="@+id/tv3" />

</androidx.constraintlayout.widget.ConstraintLayout>